#!/bin/bash

set -e

echo "+-------------------+"
echo "| Running the tests |"
echo "+-------------------+"
rake

echo "+---------------+"
echo "| Outdated gems |"
echo "+---------------+"
echo -e "\033[1;35m`bundle outdated --parseable`\033[0m"

echo "+---------------------+"
echo "| Deploying to Heroku |"
echo "+---------------------+"
git push heroku master
heroku run rake db:migrate db:seed
